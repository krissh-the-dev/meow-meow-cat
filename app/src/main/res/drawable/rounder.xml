<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="80dip" />
            <stroke android:width="1dip" android:color="#1E88E5" />
            <gradient android:angle="-90" android:startColor="#1E88E5" android:endColor="#039BE5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="80dip" />
            <stroke android:width="1dip" android:color="#0F7FE2" />
            <solid android:color="#1E88E5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="80dip" />
            <stroke android:width="1dip" android:color="#1E88E5" />
            <gradient android:angle="-90" android:startColor="#1E88E5" android:endColor="#1E88E5" />
        </shape>
    </item>
</selector>